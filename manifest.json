{
  "manifest_version": 3,
  "name": "ChatGPT Layout Modifier",
  "description": "Modifies the layout of the composer background in ChatGPT.",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "permissions": ["activeTab"],
  "host_permissions": ["https://chatgpt.com/*"]
}
